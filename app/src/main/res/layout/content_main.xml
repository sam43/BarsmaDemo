<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/app_bar_main">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1300dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="example.saadat.com.barsmademo.MainActivity"
    android:nestedScrollingEnabled="true"
    android:background="@drawable/bg1">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:autoStart="true"
        android:flipInterval="2000"
        android:focusable="false"
        android:foregroundGravity="center"
        android:paddingTop="50dp"
        android:animateFirstView="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/newsText">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i1"
            android:id="@+id/vfilp"
            android:contextClickable="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/i2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/i3"
            android:clickable="true"
            android:nestedScrollingEnabled="true"
            style="@style/AppTheme.NoActionBar"
            android:adjustViewBounds="true" />
    </ViewFlipper>

    <TextView
        android:text="Latest News!!! ::: bla bla bla bla bla bla bla bla bla.... blaaaa blaaa......"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:id="@+id/newsText"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:clickable="true"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:linksClickable="false"
        android:paddingTop="1px"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:background="#ffd900"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BARSMA"
        android:id="@+id/textView"
        android:textColor="#2a2a2a"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Register Now!"
        android:id="@+id/breg"
        android:textColor="@android:color/primary_text_dark"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/viewflipper"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="#b02723" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Not yet a member?"
        android:id="@+id/textView2"
        android:textColor="@color/design_textinput_error_color_dark"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/breg"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/blogin"
        android:typeface="normal"
        android:textColor="@android:color/primary_text_dark"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="@color/highlighted_text_material_light"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latest News..."
        android:id="@+id/textView4"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Copyright 2016. RRM | Sense Global SysTech Ltd."
        android:id="@+id/textView5"
        android:textColor="@android:color/secondary_text_light"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_below="@+id/imageView11"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WHAT WE DO...."
        android:id="@+id/textView3"
        android:textColor="@color/material_blue_grey_800"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:layout_below="@+id/button3"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="BARSMA represents more than 41 largest steel producers of the nation. We pioneer steel research and control quality of the production of steel, building a better Bangladesh."
        android:id="@+id/textView10"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/transparent"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notices and Updates"
        android:id="@+id/textView6"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView3" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="-25dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:baselineAligned="true"
            android:divider="#000000"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/i1"
                android:layout_margin="5dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView3"
                android:src="@drawable/i2" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView4"
                android:src="@drawable/i3"
                android:layout_margin="5dp" />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView5"
                android:src="@drawable/i4"
                android:layout_margin="5dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_height="250dp"
            android:layout_width="700dp"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/imageView6"
                android:src="@drawable/i5"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Here is a notice for you..."
                android:id="@+id/textView7"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/imageView6"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/imageView7"
                android:src="@drawable/i3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Here is a notice for you..."
                android:id="@+id/textView8"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/imageView6"
                android:layout_alignStart="@+id/imageView7"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:src="@drawable/i3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Here is a notice for you..."
                android:id="@+id/textView9"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/imageView6"
                android:layout_alignStart="@+id/imageView7"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </HorizontalScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Click for more..."
        android:id="@+id/button"
        android:gravity="center"
        android:layout_below="@+id/scrollView"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="more news..."
        android:id="@+id/button3"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-20dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView8"
        android:background="#000000"
        android:layout_below="@+id/breg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true"
        android:background="#2c2c2c"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView10"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2c2c2c" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView11"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>